# Copy this file to .env and fill in the values

# Session secret - MUST be a strong random string (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# Email service (Resend)
RESEND_API_KEY=
RESEND_FROM=no-reply@yourdomain.com

# Admin seed email (for initial invitation during db:seed)
ADMIN_SEED_EMAIL=

# Invitation expiration (days)
INVITE_EXPIRATION_DAYS=7

# CORS - Allowed origins (comma-separated)
# Leave empty in production to deny all cross-origin requests
# Example: https://mysite.com,https://admin.mysite.com
ALLOWED_ORIGINS=

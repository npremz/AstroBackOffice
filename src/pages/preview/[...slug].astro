---
import PreviewRenderer from '@/components/PreviewRenderer';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Preview</title>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-background to-muted/20">
    <!-- Preview Banner -->
    <div class="sticky top-0 z-50 bg-amber-500/90 backdrop-blur-sm border-b-2 border-amber-600 shadow-lg">
      <div class="container mx-auto px-4 py-3">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="bg-amber-600 text-white px-3 py-1 rounded-lg font-bold text-sm">
              PREVIEW MODE
            </div>
            <p class="text-amber-950 font-medium text-sm hidden sm:block">
              This is a preview of unpublished content
            </p>
          </div>
          <button
            onclick="window.close()"
            class="px-4 py-2 bg-white/90 hover:bg-white text-amber-900 rounded-lg font-medium text-sm transition-colors"
          >
            Close Preview
          </button>
        </div>
      </div>
    </div>

    <!-- Preview Content -->
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl p-8 md:p-12">
        <PreviewRenderer client:only="react" />
      </div>
    </div>
  </body>
</html>

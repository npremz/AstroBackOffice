---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Welcome">
	<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-8">
		<div class="max-w-2xl text-center">
			<h1 class="text-5xl font-bold text-gray-900 mb-6">Custom CMS</h1>
			<p class="text-xl text-gray-700 mb-8">
				High-performance content management system built with Astro and SQLite
			</p>
			<div class="flex gap-4 justify-center">
				<a
					href="/admin"
					class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-semibold"
				>
					Admin Panel
				</a>
				<a
					href="/db-test"
					class="bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors font-semibold"
				>
					Database Test
				</a>
			</div>
		</div>
	</div>
</BaseLayout>

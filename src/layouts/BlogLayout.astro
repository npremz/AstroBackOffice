---
import BaseLayout from './BaseLayout.astro';
import type { SeoMetadata } from '@/db/schema';

interface Props {
  entry: {
    id: number;
    slug: string;
    data: {
      title: string;
      content: string;
      author: string;
      cover?: string;
    };
    publishedAt: Date;
    seo?: SeoMetadata;
  };
}

const { entry } = Astro.props;

// Format date
const publishedDate = new Date(entry.publishedAt).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout
  title={entry.data.title}
  description={`Blog post by ${entry.data.author}`}
  seo={entry.seo}
  slug={entry.slug}
>
<article class="max-w-4xl mx-auto px-4 py-16">
  <!-- Cover Image -->
  {entry.data.cover && (
    <div class="mb-12 -mx-4 md:mx-0">
      <img
        src={entry.data.cover}
        alt={entry.data.title}
        class="w-full h-96 object-cover rounded-none md:rounded-2xl shadow-2xl"
      />
    </div>
  )}

  <!-- Article Header -->
  <header class="mb-12">
    <div class="flex items-center gap-2 mb-4">
      <span class="bg-purple-100 text-purple-800 text-sm font-semibold px-3 py-1 rounded-full">
        Blog Post
      </span>
      <span class="text-gray-500">â€¢</span>
      <time datetime={entry.publishedAt.toString()} class="text-gray-600">
        {publishedDate}
      </time>
    </div>

    <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6 leading-tight">
      {entry.data.title}
    </h1>

    <!-- Author Info -->
    <div class="flex items-center gap-4">
      <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full flex items-center justify-center">
        <span class="text-white font-bold text-lg">
          {entry.data.author.charAt(0).toUpperCase()}
        </span>
      </div>
      <div>
        <p class="font-semibold text-gray-900">{entry.data.author}</p>
        <p class="text-sm text-gray-600">Author</p>
      </div>
    </div>
  </header>

  <!-- Article Content -->
  <div class="prose prose-lg max-w-none mb-16">
    <div set:html={entry.data.content} />
  </div>

  <!-- Divider -->
  <div class="border-t border-gray-200 my-12"></div>

  <!-- Footer Actions -->
  <footer class="flex flex-col sm:flex-row items-center justify-between gap-4">
    <div class="flex items-center gap-4">
      <button class="flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
        </svg>
        <span class="font-medium">Like</span>
      </button>

      <button class="flex items-center gap-2 px-4 py-2 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
        </svg>
        <span class="font-medium">Share</span>
      </button>
    </div>

    <a
      href="/"
      class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors font-semibold"
    >
      Back to Home
    </a>
  </footer>
</article>
</BaseLayout>

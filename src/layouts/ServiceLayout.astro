---
import BaseLayout from './BaseLayout.astro';
import type { SeoMetadata } from '@/db/schema';

interface Props {
  entry: {
    id: number;
    slug: string;
    data: {
      title: string;
      description: string;
      price?: number;
      image?: string;
    };
    seo?: SeoMetadata;
  };
}

const { entry } = Astro.props;
---

<BaseLayout
  title={entry.data.title}
  description={entry.data.description}
  seo={entry.seo}
  slug={entry.slug}
>
<article class="max-w-5xl mx-auto px-4 py-16">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    <!-- Image Section -->
    <div class="order-2 lg:order-1">
      {entry.data.image ? (
        <img
          src={entry.data.image}
          alt={entry.data.title}
          class="w-full h-auto rounded-2xl shadow-2xl object-cover"
        />
      ) : (
        <div class="w-full h-96 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-2xl shadow-2xl flex items-center justify-center">
          <svg class="w-24 h-24 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      )}
    </div>

    <!-- Content Section -->
    <div class="order-1 lg:order-2 flex flex-col justify-center">
      <div class="inline-block mb-4">
        <span class="bg-blue-100 text-blue-800 text-sm font-semibold px-4 py-2 rounded-full">
          Service
        </span>
      </div>

      <h1 class="text-5xl font-bold text-gray-900 mb-6">
        {entry.data.title}
      </h1>

      <p class="text-xl text-gray-700 mb-8 leading-relaxed">
        {entry.data.description}
      </p>

      {entry.data.price !== undefined && (
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white p-8 rounded-2xl shadow-xl mb-8">
          <div class="flex items-baseline gap-2">
            <span class="text-5xl font-bold">${entry.data.price}</span>
            <span class="text-xl opacity-90">/ service</span>
          </div>
        </div>
      )}

      <div class="flex gap-4">
        <a
          href="#contact"
          class="bg-blue-600 text-white px-8 py-4 rounded-lg hover:bg-blue-700 transition-colors font-semibold text-lg shadow-lg hover:shadow-xl"
        >
          Get Started
        </a>
        <a
          href="/"
          class="bg-gray-100 text-gray-700 px-8 py-4 rounded-lg hover:bg-gray-200 transition-colors font-semibold text-lg"
        >
          Back to Home
        </a>
      </div>
    </div>
  </div>

  <!-- Additional Details Section -->
  <div class="mt-16 pt-16 border-t border-gray-200">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">What's Included</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Professional Quality</h3>
        <p class="text-gray-600">High-quality service delivered by experienced professionals</p>
      </div>
      <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Fast Delivery</h3>
        <p class="text-gray-600">Quick turnaround time without compromising quality</p>
      </div>
      <div class="bg-white p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Guaranteed Results</h3>
        <p class="text-gray-600">100% satisfaction guarantee or your money back</p>
      </div>
    </div>
  </div>
</article>
</BaseLayout>
